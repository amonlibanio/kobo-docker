# `envsubst` template.
charset     utf-8;

# Default configuration
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name $hostname;

    location / {
        # return empty response
        return 204;
    }

    # Proxy ELB status
    location ~ /elb/([^/]*)/(.*)$ {
        resolver 127.0.0.1;
        proxy_pass http://127.0.0.1/$2;
        proxy_set_header Host $1;
        proxy_intercept_errors on;
        access_log  off;
    }
}

# Maintenance HTTP.
server {
    listen      80;
    server_name  ~^(${KOBOCAT_PUBLIC_SUBDOMAIN}|${KOBOFORM_PUBLIC_SUBDOMAIN}|${ENKETO_EXPRESS_PUBLIC_SUBDOMAIN})\.${PUBLIC_DOMAIN_NAME}$;

    access_log  /var/log/nginx/maintenance.access.log with_host;
    error_log   /var/log/nginx/maintenance.error.log;

    root /tmp/kobo_nginx/maintenance/www;
    index index.html;

    include /etc/nginx/include.https_redirection.conf;

    location / {
        try_files $uri $uri/ /index.html;
    }
}
